{
  "enabled": true,
  "formatters": {
    ".rb": {
      "name": "RuboCop",
      "command": "rubocop",
      "args": ["-A"]
    },
    ".py": {
      "name": "Black",
      "command": "black",
      "args": ["--line-length", "88"]
    },
    ".js": {
      "name": "Prettier",
      "command": "npx",
      "args": ["prettier", "--write", "--single-quote", "--trailing-comma", "es5"]
    },
    ".ts": {
      "name": "Prettier",
      "command": "npx",
      "args": ["prettier", "--write", "--single-quote", "--trailing-comma", "es5"]
    },
    ".json": {
      "name": "jq",
      "command": "jq",
      "args": [".", "--indent", "2", "--sort-keys"]
    },
    ".go": {
      "name": "gofmt",
      "command": "gofmt",
      "args": ["-w"]
    }
  },
  "skip_patterns": [
    "node_modules/",
    "dist/",
    "build/",
    ".git/",
    "*.min.js",
    "*.min.css",
    "vendor/",
    "tmp/",
    ".bundle/",
    "*.generated.*"
  ]
}
