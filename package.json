{
  "name": "simpleclaude",
  "version": "0.2.1",
  "description": "A practical minimalist AI assistant framework",
  "scripts": {
    "token-check": "npx token-limit --config token-limit.config.ts",
    "token-check-verbose": "npx token-limit --json --config token-limit-per-file.config.ts",
    "token-commands": "npx token-limit .claude/commands/**/*.md --limit 10k --model claude-sonnet-4",
    "token-shared": "npx token-limit .claude/shared/**/*.yml --limit 5k --model claude-sonnet-4"
  },
  "devDependencies": {
    "jiti": "^2.4.2",
    "token-limit": "^1.0.0"
  }
}
